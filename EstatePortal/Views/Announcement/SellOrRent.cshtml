<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dodaj ogłoszenie</title>
    <link rel="stylesheet" href="~/css/Announcements/SellOrRent.css">
</head>
<body>
    <header>
        <a href="#" class="logo">Logo</a>
        <ul class="navlist">
            <li><a href="@Url.Action("Index", "Home")" class="active">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
        </ul>
        <div id="rightNavlist">
            <div id="mojeKonto"><a href="@Url.Action("Login", "Home")"><i class="icon-user"></i>Moje konto</a></div>
        </div>
    </header>
    <div class="container">
        <h1>Dodaj ogłoszenie</h1>
        <div class="options">
            <label>
                <input type="radio" name="transactionType" value="Sprzedam" checked onchange="togglePropertyType()">
                <span>Sprzedam</span>
            </label>
            <label>
                <input type="radio" name="transactionType" value="Wynajmę" onchange="togglePropertyType()">
                <span>Wynajmę</span>
            </label>
        </div>
        <div class="property-types">
            <h2>Wybierz rodzaj nieruchomości</h2>
            <div id="sellOptions" class="options-grid active">
                <div class="option-item" onclick="redirectToAddAnnouncement('Flat')"><p>Mieszkania</p></div>
                <div class="option-item" onclick="redirectToAddAnnouncement('House')"><p>Domy</p></div>
                <a href="@Url.Action("AddAnnouncement", "Announcement", new { propertyType = "House" })" class="option-item">Domy</a>
                <div class="option-item" onclick="window.location.href='@Url.Action("SellPlots", "Home")'"><p>Działki</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("SellLocal", "Home")'"><p>Lokale użytkowe</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("SellHall", "Home")'"><p>Hale i magazyny</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("SellGarage", "Home")'"><p>Garaże</p></div>
            </div>
            <div id="rentOptions" class="options-grid">
                <div class="option-item" onclick="window.location.href='@Url.Action("RentFlat", "Home")'"><p>Mieszkania</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("RentHouse", "Home")'"><p>Domy</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("RentRoom", "Home")'"><p>Pokoje</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("SellPlots", "Home")'"><p>Działki</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("RentLocal", "Home")'"><p>Lokale użytkowe</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("RentHall", "Home")'"><p>Hale i magazyny</p></div>
                <div class="option-item" onclick="window.location.href='@Url.Action("RentGarage", "Home")'"><p>Garaże</p></div>
            </div>
        </div>
    </div>

    <script>
        function togglePropertyType() {
            const sellOptions = document.getElementById("sellOptions");
            const rentOptions = document.getElementById("rentOptions");
            const transactionType = document.querySelector('input[name="transactionType"]:checked').value;

            if (transactionType === "Sprzedam") {
                sellOptions.classList.add("active");
                rentOptions.classList.remove("active");
            } else {
                sellOptions.classList.remove("active");
                rentOptions.classList.add("active");
            }
        }

        togglePropertyType();
    </script>

    <script>
        function redirectToAddAnnouncement(propertyType) {
            // Dodanie parametru "propertyType" do URL
            console.log("Redirecting to AddAnnouncement with propertyType:", propertyType);
            window.location.href = `/Announcement/AddAnnouncement?propertyType=${propertyType}`;
        }
    </script>
</body>
</html>

