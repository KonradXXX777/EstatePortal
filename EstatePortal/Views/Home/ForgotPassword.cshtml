@{
    ViewData["Title"] = "Zapomniałem hasła";
}
<h2>Zapomniałem hasła</h2>

<form asp-controller="Account" asp-action="ForgotPassword" method="post">
    <div>
        <label>Email:</label>
        <input type="email" name="email" required />
    </div>
    <button type="submit">Wyślij link resetujący hasło</button>
</form>
